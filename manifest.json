{
  "manifest_version": 3,
  "name": "TeamSpirit Timesheet Automator",
  "version": "1.5",
  "description": "Automates filling in the work schedule on TeamSpirit.",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://*.force.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.force.com/*"
      ],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}
